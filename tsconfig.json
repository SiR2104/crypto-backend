{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"]
}
